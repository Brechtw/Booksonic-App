<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/create_podcast_url_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:textSize="20dp"
			android:text="@string/select_podcasts.add_url"
			android:textColor="?android:textColorPrimary"/>
		<EditText
			android:id="@+id/create_podcast_url"
			android:inputType="textUri"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="4dp"
			android:text="https://"/>
	</LinearLayout>

	<TextView
		android:id="@+id/listenNotesText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="4dp"
		android:textSize="12dp"
		android:text="@string/select_podcasts.add_message"
		android:textColor="?android:textColorPrimary"/>

	<ImageView
		android:id="@+id/poweredByListenNotes"
		android:layout_width="150dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="4dp"
		android:layout_height="15dp"
		app:srcCompat="@drawable/listennotes" />


</LinearLayout>